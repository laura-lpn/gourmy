{% extends 'base.html.twig' %}

{% block title %}
	Nos restaurants partenaires
{% endblock %}

{% block meta %}
	<meta name="description" content="Découvrez nos restaurants partenaires engagés pour une cuisine locale et authentique. Soutenez des chefs passionnés à travers la France.">
	<meta property="og:title" content="Nos restaurants partenaires – Gourmy">
	<meta property="og:description" content="Une sélection unique de restaurants locaux, sélectionnés pour leur authenticité et leur engagement pour le terroir.">
	<meta property="og:image" content="{{ asset('images/pages/restaurants.jpg') }}">
{% endblock %}

{% block body %}

	<section class="bg-restaurants relative object-cover bg-center h-[65vh] flex items-center justify-center">
		<div class="bg-black/35 w-full h-full absolute top-0 left-0 z-0"></div>

		<h1 class="text-white text-4xl font-medium font-second relative z-10">
			Nos restaurants partenaires
		</h1>
	</section>

	<section class="py-12 px-6 max-w-7xl w-full mx-auto">
		<search-bar data-url="{{ path('app_restaurant_search') }}"></search-bar>
		<div id="restaurant-results" class="mt-6">
			{{ include('restaurant/_list.html.twig', { restaurants: restaurants }) }}
		</div>
	</section>
{% endblock %}
