{% extends 'base.html.twig' %}

{% block title %}Nos Roadtrips{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Nos Roadtrips</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {% autoescape false %}
                    {{ message }}
                {% endautoescape %}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for roadtrip in roadtrips %}
            <div class="bg-white p-4 rounded shadow">
                <h2 class="text-xl font-semibold">{{ roadtrip.title }}</h2>
                <p>{{ roadtrip.description }}</p>
                <a href="{{ path('app_roadtrip_show', { id: roadtrip.id }) }}" class="text-blue-500 hover:underline">Voir plus</a>
            </div>
        {% endfor %}
    </div>

{% endblock %}
