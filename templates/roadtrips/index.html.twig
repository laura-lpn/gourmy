{% extends 'base.html.twig' %}

{% block title %}Nos Roadtrips
{% endblock %}

{% block body %}
	<section class="bg-roadtrips relative object-cover bg-center h-[65vh] flex items-center justify-center">
		<div class="bg-black/35 w-full h-full absolute top-0 left-0 z-0"></div>

		<h1 class="text-white text-4xl font-medium font-second relative z-10">
			Nos roadtrips
		</h1>
	</section>

	<section class="py-12 px-6 max-w-7xl mx-auto">
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
			{% for roadtrip in roadtrips %}
				{% include 'roadtrips/_card.html.twig' with { roadtrip: roadtrip } %}
			{% endfor %}
		</div>
	</section>
{% endblock %}
