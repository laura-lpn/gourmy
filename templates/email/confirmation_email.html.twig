{% extends 'email/email_base.html.twig' %}

{% block title %}Confirmation de votre email
{% endblock %}

{% block content %}
	<h2 class="title" style="color:#098C8C; font-size:26px; margin-bottom:10px;">Confirmez votre email</h2>
	<p class="text" style="font-size:16px; color:#555; margin-bottom:20px;">
		Bonjour
		{{ user.firstName }},<br><br>
		Veuillez confirmer votre adresse email en cliquant sur le bouton ci-dessous :
	</p>
	<a href="{{ signedUrl|raw }}" class="button" style="display:inline-block; background-color:#098C8C; color:white; text-decoration:none; padding:12px 25px; border-radius:6px; font-weight:bold; font-size:15px;">
		Confirmer mon email
	</a>
	<p style="font-size:14px; color:#666; margin-top:20px;">
		Ce lien expirera dans
		{{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}.
	</p>
{% endblock %}
