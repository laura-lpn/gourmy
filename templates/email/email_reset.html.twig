{% extends 'email/email_base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block content %}
	<h2 class="title" style="color:#098C8C; font-size:26px; margin-bottom:10px;">Réinitialisation du mot de passe</h2>
	<p class="text" style="font-size:16px; color:#555; margin-bottom:20px;">
		Bonjour
		{{ user.firstName }},<br><br>
		Pour réinitialiser votre mot de passe, cliquez sur le bouton ci-dessous :
	</p>
	<a href="{{ url('app_reset_password', {token: resetToken.token}) }}" class="button" style="display:inline-block; background-color:#098C8C; color:white; text-decoration:none; padding:12px 25px; border-radius:6px; font-weight:bold; font-size:15px;">
		Réinitialiser mon mot de passe
	</a>
	<p style="font-size:14px; color:#666; margin-top:20px;">
		Ce lien expirera dans
		{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
	</p>
{% endblock %}
