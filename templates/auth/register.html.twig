{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}
	<h1 class="my-h1 mt-4">Inscription</h1>
	<div class="flex flex-col justify-center items-center gap-4 w-4/5 lg:w-1/3 mx-auto">
		{% for flash_error in app.flashes('registration_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}

		<div class="alert-danger">
			{{ form_errors(registrationForm) }}
		</div>

		{{ form_start(registrationForm, {'attr': {'class': 'my-form'}}) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.firstName) }}
		{{ form_row(registrationForm.lastName) }}
		{{ form_row(registrationForm.username) }}
		{{ form_row(registrationForm.plainPassword) }}
		<div class="flex items-center !flex-row space-x-2">
				{{ form_widget(registrationForm.agreeTerms, {
						'attr': { 'class': 'h-4 w-4' }
				}) }}
				{{ form_label(registrationForm.agreeTerms, null, {
						'label_attr': { 'class': 'text-sm font-main font-normal' }
				}) }}
		</div>
		{{ form_errors(registrationForm.agreeTerms) }}


		<button type="submit" class="btn">S'inscrire</button>
		{{ form_end(registrationForm) }}
		<p class="text-center">Vous avez déjà un compte ?
			<a class="text-blue" href="{{ path('app_login') }}">Connectez-vous</a>
		</p>
	</div>
{% endblock %}
