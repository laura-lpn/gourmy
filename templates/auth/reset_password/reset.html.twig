{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<h1 class="my-h1 mt-28">Réinitialiser votre mot de passe</h1>
	<div class="flex flex-col justify-center items-center gap-4 w-4/5 lg:w-1/3 mx-auto">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		{{ form_start(resetForm, {'attr': {'class': 'my-form'}})}}
		{{ form_row(resetForm.plainPassword) }}
		<button class="btn btn-primary">Réinitialiser le mot de passe</button>
		{{ form_end(resetForm) }}
	</div>
{% endblock %}
