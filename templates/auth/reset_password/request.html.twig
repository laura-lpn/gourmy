{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <h1 class="my-h1 mt-28 w-4/5 mx-auto">Réinitialiser votre mot de passe</h1>
	<div class="flex flex-col justify-center items-center gap-4 w-4/5 lg:w-1/3 mx-auto">
        <p class="text-center">
            Entrez votre adresse email pour recevoir un lien de réinitialisation de mot de passe
        </p>

        {% for flash_error in app.flashes('reset_password_request_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_start(requestForm, {'attr': {'class': 'my-form'}}) }}
            {{ form_row(requestForm.email) }}
            <button class="btn">Envoyer le lien de réinitialisation</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
