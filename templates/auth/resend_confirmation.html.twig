{% extends 'base.html.twig' %}

{% block title %}Renvoyer la confirmation
{% endblock %}

{% block body %}
	<h1 class="my-h1 mt-28">Renvoyer l'email de confirmation</h1>
	<div class="flex flex-col justify-center items-center gap-4 w-4/5 lg:w-1/3 mx-auto">

		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }}">{{ message }}</div>
			{% endfor %}
		{% endfor %}

		{{ form_start(form, {'attr': {'class': 'my-form'}}) }}
		{{ form_row(form.email) }}
		<button class="btn btn-primary">Renvoyer l'email</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
