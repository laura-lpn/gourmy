{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	<h1 class="my-h1 mt-28">Connexion</h1>
	<div class="flex flex-col justify-center items-center gap-4 w-4/5 lg:w-1/3 mx-auto">

		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }}">
					{% autoescape false %}
						{{ message }}
					{% endautoescape %}
				</div>
			{% endfor %}
		{% endfor %}

		<form method="post" class="my-form">
			<label for="username">Email</label>
			<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
			<label for="password">Mot de passe</label>
			<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
			<p>Mot de passe oublié ?
				<a href="{{ path('app_forgot_password_request') }}" class="text-blue">Réinitialiser le mot de passe</a>
			</p>
			{% if target %}
				<input type="hidden" name="_target_path" value="{{ target }}">
			{% endif %}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn mt-2" type="submit">
				Se connecter
			</button>
		</form>

		<div>
			<p>Vous n'avez pas de compte ?
				<a href="{{ path('app_register') }}" class="text-blue">Créer un compte</a>
			</p>
		</div>
	</div>
{% endblock %}
